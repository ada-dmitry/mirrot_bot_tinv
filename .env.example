# токен владельца МАСТЕР-счёта (нужны права чтения портфеля/операций)
MASTER_TOKEN=your_master_token_here
MASTER_ACCOUNT_ID=your_master_account_id

# токен владельца СЛЕЙВ-счёта (нужны права на выставление ордеров + портфель)
SLAVE_TOKEN=your_slave_token_here
SLAVE_ACCOUNT_ID=your_slave_account_id

# Коэффициент копирования (0.5 = вдвое меньше, 2.0 = вдвое больше)
COEFF=0.1

# DRY-RUN режим: ордера не отправляются (true/false)
DRY_RUN=true

# Интервал опроса для fallback-пулинга (в секундах)
POLL_INTERVAL_SEC=10

# Вайт-/блэк-листы FIGI (через запятую). Пусто — без ограничений.
ALLOW_FIGI=
DENY_FIGI=

# Лимиты на лоты
MIN_LOTS=1
MAX_LOTS_PER_ORDER=1000

# Файл состояния (чекпоинт для идемпотентности)
STATE_FILE=mirror_state.json
